{
   "compilerOptions": {
      "target": "es5",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "module": "commonjs",
      "lib": ["es2017", "es7", "es6","DOM" ],
      "declaration": true,
      "noEmit": false,
      "strict": false,
      "esModuleInterop": true,
      "jsx": "preserve",
      "allowJs": true,
      "resolveJsonModule": true
   }
}